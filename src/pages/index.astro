	imageUrl: string;
	alt: string;
	width: number;
	height: number;
	loading?: "lazy" | "eager";
}
interface Product {
	id: string;
	name: string;
	brand: string;
	price: number;
	image: ProductImage;
}

interface Props {
	mensProducts: Product[];
	womensProducts: Product[];
}

